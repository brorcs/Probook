<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
  <center>
    <div class="well" style="max-width: 500px">
    <h4 style="text-align: left"><%= post.body %></h4>
    <%= image_tag post.image, style: "max-width: 450px" %>
    <h5>Posted by <%= post.user.display_name %></h5>
    
    <% if current_user.try(:admin?) %>
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </div>
  </center>
<% end %>

